    "@types/react-modal": "^3.10.4",
    "@types/sequelize": "^4.28.8",
    "@types/uuidv4": "^5.0.0",
    "@types/validator": "^12.0.1",
    "autoprefixer": "^9.7.4",
    "bcrypt": "^3.0.8",
    "body-parser": "^1.19.0",
