{
  "name": "mern-ecom",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "engines": {
    "node": "12.x"
  },
  "scripts": {
    "start": "node dist/server.js",
    "build": "yarn run iall && tsc && cd client && yarn build",
    "iall": "concurrently \"yarn\" \"cd client && yarn\"",
    "clean": "concurrently \"rimraf node_modules yarn.lock package-lock.json\" \"cd client && rimraf node_modules build yarn.lock package-lock.json\"",
    "heroku-postbuild": "yarn run iall && tsc && cd client && yarn build",
    "dev": "concurrently \"cd server && nodemon server.ts\" \"cd client && yarn start\"",
    "ts-build": "tsc",
    "deploy": "git push heroku master",
    "remove-unsed-import": "node ./node_modules/tslint/bin/tslint --config tslint-imports.json --fix --project ."
  },
  "author": "minhtamos",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^5.1.0",
    "nodemon": "^2.0.2",
    "postcss-cli": "^7.1.0",
    "ts-node": "^8.6.2",
    "tsc": "^1.20150623.0",
    "tslint": "^6.1.0",
    "tslint-etc": "^1.10.1",
    "typescript": "^3.8.3"
  },
